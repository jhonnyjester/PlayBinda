<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.jhony.jester.play.Activitys.SettingsActivity">

    <ImageButton
        android:id="@+id/back_btn_sett"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/md_transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/name_cv_sett"
        android:layout_width="match_parent"
        android:layout_height="365dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_image_sett"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:padding="5dp"
                android:src="@drawable/vector" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/user_name_sett"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_image_sett"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Jhony Jester"
                android:textColor="@color/primary_dark"
                android:textSize="25sp" />


            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_below="@+id/user_name_sett"
                android:layout_margin="10dp"
                android:alpha="0.8"
                android:background="#AAA" />

            <LinearLayout
                android:layout_margin="10dp"
                android:id="@+id/lin_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/music_sett"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                      android:drawablePadding="10dp"
                              android:drawableStart="@drawable/ic_music_note_black_24dp"
                    android:text="Music"
                    android:textColor="@color/primary"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/rotation_sett"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                       android:drawablePadding="10dp"
                                                  android:drawableStart="@drawable/ic_screen_rotation_black_24dp"
                    android:text="Rotation"
                    android:textColor="@color/primary"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_below="@+id/lin_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sound_sett"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                 android:drawablePadding="10dp"
                                       android:drawableStart="@drawable/ic_sound"
                    android:text="Sound"
                    android:textColor="@color/primary"
                    android:textSize="22sp" />

                <TextView

                    android:id="@+id/vibrate_sett"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                                   android:drawableStart="@drawable/ic_vibration_black_24dp"
                                             android:text="Vibration"
                    android:textColor="@color/primary"
                    android:textSize="22sp" />
            </LinearLayout>


        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/sign_out_sett"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/round_button_backgroud"
        android:text="sign out"
        android:textColor="@drawable/button_text"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/about_sett"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/md_transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_info_outline_black_24dp" />

</android.support.constraint.ConstraintLayout>
